#!/bin/bash
set -e

PREFIX=$(date "+%Y%m%d%H%M%S")
VM_NAME=$PREFIX-vm
SUBSCRIPTION_ID="0bf5bc92-8ea2-4160-a704-7130857f3ba3"

# resourcegroup: vpnp2s
# vnet: VNet
# subnet: vmSubnet
# location: japaneast
# vmimage: DS2 v2: 2 vCPU、7 GB の RAM、14 GB の一時ストレージ, $0.140/時間

# check az command
if [ -z "$(which az)" ]; then
  echo "az command not found. Please install Azure CLI."
  exit 1
fi

# rewrite
sed -i -e "s/sakabekodai/$USER/g" cloud-init.cfg
sed -i -e "s/sakabekodai/$USER/g" ansible/*.yml
sed -i -e "s/sakabekodai/$USER/g" ansible/files/etc/profile.d/bashrc
sed -i -e "s/koudaiii/$GITHUB_USER/g" ansible/*.yml

az login

echo "az vm create \
  --resource-group $RESOURCE_GROUP_NAME \
  --location $LOCATION \
  --name $VM_NAME \
  --image $VM_IMAGE \
  --size $VM_SIZE \
  --storage-sku Premium_LRS \
  --data-disk-sizes-gb 128 \
  --vnet-name $VNET_NAME \
  --custom-data cloud-init.cfg \
  --generate-ssh-keys \
  --priority Spot \
  --max-price -1 \
  --eviction-policy Deallocate \
  --subscription $SUBSCRIPTION_ID \
  --subnet-address-prefix $SUBNET_ADDRESS_PREFIX"

az vm create \
  --resource-group $RESOURCE_GROUP_NAME \
  --location $LOCATION \
  --name $VM_NAME \
  --image $VM_IMAGE \
  --size $VM_SIZE \
  --storage-sku Premium_ZRS \
  --data-disk-sizes-gb 128 \
  --vnet-name $VNET_NAME \
  --nsg-rule SSH \
  --accelerated-networking true \
  --custom-data cloud-init.cfg \
  --generate-ssh-keys \
  --priority Spot \
  --max-price -1 \
  --eviction-policy Deallocate \
  --subscription $SUBSCRIPTION_ID \
  --subnet-address-prefix $SUBNET_ADDRESS_PREFIX

echo ""
echo "Complated!"
echo ""
echo "----------------------------------------------------------------"
echo "# How to login to VM"
echo ""
echo "Run Azure VPN Client and connect to VPN."
echo "ssh $(whoami)@$(az vm show -n $VM_NAME -g $RESOURCE_GROUP_NAME --show-details -o json --query privateIps -o tsv)"
echo ""
